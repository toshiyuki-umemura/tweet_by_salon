<!DOCTYPE html>
<html>

<head>
  <title>TweetBySalon</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => 'reload' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => 'reload' %>
  <meta name="viewport" content="width=device-width,initial-scale=1.0,minimum-scale=1.0">
</head>

<body>
  <header>
    <div class="header_container">
      <div class="title">
        <%= link_to("タイトル", "/") %>
      </div>
      <ul class="login sign-up">
        <% if user_signed_in? %>
          <li>
            <%= link_to("ログアウト", "/logout") %>
          </li>
          <li>
            <%= link_to("投稿", "/tweets/new") %>
          </li>
          <li>
            <%= link_to("マイページ", "#") %>
          </li>
        <% else user_signed_in? %>
          <li>
            <%= link_to("ログイン", "/login") %>
          </li>
          <li>
            <%= link_to("新規登録", "/signup") %>
          </li>
        <% end %>
      </ul>
    </div>
  </header>

  <p class="notice"><%= notice %></p>
  <p class="alert"><%= alert %></p>

  <%= yield %>

  <footer>
    <div>&copy;とっくんサロン開発</div>
  </footer>

</body>

</html>